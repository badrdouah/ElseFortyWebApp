@model BugModel
@{
    ViewData["Title"] = "Resolve Bug";
 
    var key = Context.Request.Query["key"];
 
}

<div class="text-center">
    <h1 class="display-4">Resolve Bug Report</h1>
</div>

<script type="text/javascript">tinymce.init({
        selector: '#resolution',
        height: 300,
        plugins: [
            'advlist', 'autolink', 'link', 'image', 'lists', 'charmap', 'preview', 'anchor', 'pagebreak',
            'searchreplace', 'wordcount', 'visualblocks', 'visualchars', 'code', 'fullscreen', 'insertdatetime',
            'media', 'table', 'emoticons', 'template'
        ],
        toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | ' +
            'bullist numlist outdent indent | link image | ',
        menu: {},
        menubar: 'file edit view insert format tools table',
        content_css: 'css/content.css'
    });</script>

<form method="post" asp-action="Resolve">
    <input asp-for="id" hidden />
    <input asp-for="name" hidden/>
    <input asp-for="email" hidden/>
    <input asp-for="status" hidden/>
    <input asp-for="software" hidden/>
    <input asp-for="subject" hidden/>
    <input asp-for="content" hidden/>
    <label class="col-sm-2 col-form-label">Content</label>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="name" disabled>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="email" disabled>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="status" disabled>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Tool</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="software" disabled>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Subject</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="subject" disabled>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10 ">
            <div class="border p-3 m-0">
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.content))

            </div>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="resolution" class="col-sm-2 col-form-label">Resolution</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="resolution" name="resolution" rows="5"></textarea>
            <span asp-validation-for="resolution" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row justify-content-end">
        <div class="col-sm-10 d-flex justify-content-end">
            <button type="submit" asp-route-key="@key" class="btn btn-primary">Resolve</button>
        </div>
    </div>
</form>
 