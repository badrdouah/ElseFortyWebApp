@model BugModel
@{
    ViewData["Title"] = "Send Bug";
}

<div class="text-center">
    <h1 class="display-4">Submit Bug Report</h1>
</div>

<script type="text/javascript">tinymce.init({
        selector: '#content',
        height: 300,
        plugins: [
            'advlist', 'autolink', 'link', 'image', 'lists', 'charmap', 'preview', 'anchor', 'pagebreak',
            'searchreplace', 'wordcount', 'visualblocks', 'visualchars', 'code', 'fullscreen', 'insertdatetime',
            'media', 'table', 'emoticons', 'template'
        ],
        toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | ' +
            'bullist numlist outdent indent | link image | ',
        menu: {},
        menubar: 'file edit view insert format tools table',
        content_css: 'css/content.css'
    });</script>

<form method="post" asp-action="Report">
    <input type="text" asp-for="id" hidden />
    <div class="form-group row mb-3">
        <label asp-for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="name" placeholder="Enter your name">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" asp-for="email" placeholder="Enter your email">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="software" class="col-sm-2 col-form-label">Tool</label>
        <div class="col-sm-10">
            <select asp-for="software"
                    class="form-control">
                <option value="">Select option ...</option>
                <option value="Spine Plus">Spine Plus</option>
                <option value="Spine Mesh Deform">Spine Mesh Deform</option>
                <option value="Spine Path Finding">Spine Path Finding</option>
            </select>
            <span asp-validation-for="software" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="subject" class="col-sm-2 col-form-label">Subject</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="subject" placeholder="Enter the subject">
            <span asp-validation-for="subject" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="content" class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="content" name="content" rows="5"></textarea>
            <span asp-validation-for="content" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row justify-content-end">
        <div class="col-sm-10 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
 