@model List<BlogPostModel>


<h1 class="border-bottom">All Blog Posts</h1>
<div style="min-height:500px;">
    @if (Model.Count > 0)
    {
        <ul>

            @foreach (var post in Model)
            {
                <li> <a asp-action="read" asp-route-id="@post.id"> @post.title </a> </li>
            }

        </ul>
        @if (User.IsInRole("Admin"))
        {
            <small> <i><a asp-action="New" asp-route-cleanValidation="true">+ New Post </a></i></small>
        }

    }
    else
    {
<div class="text-center">
    <h4 class="text-muted pt-5"> <i>No Posts To Show</i></h4>
        @if (User.IsInRole("Admin"))
        {
        <small> <i><a asp-action="New" asp-route-cleanValidation="true">+ New Post </a></i></small>
        }
    </div>
    }
</div>