@model BlogPostModel

@{
    ViewData["Title"] = Model.title;
}
 

<div class="d-flex justify-content-center">
    <div class="col-10 border p-2">
        <h1 style="text-indent: 20px;" class="border-bottom"> @Model.title</h1>
        <div style="min-height: 500px;" class="p-3">
            @Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.content))
        </div>
        <div class="d-flex border p-2 ">
     
            <small>
                Author: @Model.author <br />
                Created in : @Model.creationDate <br />
                Modified in : @Model.modificationDate<br />

                @if (User.IsInRole("Admin"))
                {
                    <a class="" asp-action="edit" asp-route-id="@Model.id"> Edit </a>
                    <a class="link-button" asp-action="delete" asp-route-id="@Model.id"> Delete</a>
                 }

            </small>
       
        </div>
    </div>
</div>

