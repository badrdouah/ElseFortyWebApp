@model BugModel
@{
    ViewData["Title"] = "View Bug";
 
    var key = Context.Request.Query["key"];
 
}

<div class="text-center">
    <h1 class="display-4">View Bug Report</h1>
</div>

 
<div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Creation Time</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="creationTime" disabled>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="name" disabled>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="email" disabled>
        </div>
    </div>



    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Tool</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="software" disabled>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Subject</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="subject" disabled>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10 ">
            <div class="border p-3 m-0">
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.content))

            </div>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="status" disabled>
        </div>
    </div>
    @if (Model.status == "Resolved")
    {
        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label">Resolution Time</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="resolutionTime" disabled>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label">Resolution</label>
            <div class="col-sm-10 ">
                <div class="border p-3 m-0">
                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.resolution))

                </div>
            </div>
        </div>
    }

    <div class="form-group row justify-content-end">
        <div class="col-sm-10 d-flex justify-content-end">
            <a asp-action="list" asp-route-key="@key" class="btn btn-success">Back</a>
        </div>
    </div>
</div>
 